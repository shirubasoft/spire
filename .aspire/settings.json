{
  "$schema": "https://raw.githubusercontent.com/shirubasoft/spire/main/schemas/aspire-settings.schema.json",
  "appHostPath": "../sample/Sample.AppHost/Sample.AppHost.csproj",
  "sharedResources": {
    "resources": {
      "sample-apiservice": {
        "mode": "project",
        "containerMode": {
          "imageName": "sample-apiservice",
          "imageRegistry": "docker.io",
          "imageTag": "latest",
          "buildCommand": "dotnet publish --os linux --arch x64 /t:PublishContainer",
          "buildWorkingDirectory": "./sample/Sample.ApiService"
        },
        "projectMode": {
          "projectPath": "./sample/Sample.ApiService/Sample.ApiService.csproj"
        }
      },
      "sample-web": {
        "mode": "project",
        "containerMode": {
          "imageName": "sample-web",
          "imageRegistry": "docker.io",
          "imageTag": "latest",
          "buildCommand": "dotnet publish --os linux --arch x64 /t:PublishContainer",
          "buildWorkingDirectory": "./sample/Sample.Web"
        },
        "projectMode": {
          "projectPath": "./sample/Sample.Web/Sample.Web.csproj"
        }
      }
    },
    "externalResources": [
      {
        "url": "https://github.com/shirubasoft/spire-external-repo-sample",
        "branch": "main"
      }
    ]
  }
}